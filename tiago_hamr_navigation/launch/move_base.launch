<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="global_planner" default="global_planner"/>
    <arg name="local_planner"  default="dwa_local_planner"/>

    <arg name="odom"    default="mobile_base_controller/odom"/>
    <arg name="cmd_vel" default="nav_vel"/>

    <arg name="config_base_path" default="$(find tiago_hamr_navigation)"/>
    <arg name="map" default="$(env HOME)/.pal/tiago_maps/config"/>

    <node pkg="move_base" type="move_base" name="move_base" clear_params="true" output="screen" respawn="true" >
        <remap from="odom"    to="$(arg odom)"/>
        <remap from="cmd_vel" to="$(arg cmd_vel)"/>

        <rosparam command="load" file="$(config_base_path)/config/common/move_base.yaml"/>

        <rosparam command="load" file="$(config_base_path)/config/common/global_costmap.yaml"/>
        <rosparam command="load" file="$(config_base_path)/config/common/local_costmap.yaml"/>

        <rosparam command="load" file="$(config_base_path)/config/global_planner/$(arg global_planner)/global_planner.yaml"/>
        <rosparam command="load" file="$(config_base_path)/config/local_planner/$(arg local_planner)/local_planner.yaml"/>
    </node>
</launch>