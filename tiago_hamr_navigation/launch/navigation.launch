<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="global_planner" default="global_planner"/>
    <arg name="local_planner"  default="teb_local_planner"/>

    <arg name="odom"            default="mobile_base_controller/odom"/>
    <arg name="cmd_vel"         default="nav_vel"/>

    <arg name="base_frame"      default="/base_footprint"/>
    <arg name="map_frame"       default="/map"/>

    <arg name="world"           default="small_office"/>
    <arg name="state"           default="localization"/>
    <arg name="localization"    default="amcl"/>
    <arg name="mapping"         default="karto"/>
    <arg name="map"             default="$(env HOME)/.pal/tiago_maps/configurations/$(arg world)"/>
    <arg name="octomap"         default="false"/>
    <arg name="multiple"        default="false"/>
    <arg name="tf_prefix"       default=""/>
    <arg name="public_sim"      default="true"/>
    <arg name="laser_model"     default="sick-571"/>
    <arg name="rgbd_sensors"    default="false"/>

    <arg name="rviz"            default="true"/>

    <node pkg="move_base" type="move_base" name="move_base" clear_params="true" output="screen" respawn="true" >
        <remap from="odom"    to="$(arg odom)"/>
        <remap from="cmd_vel" to="$(arg cmd_vel)"/>

        <rosparam command="load" file="$(find tiago_hamr_navigation)/config/common/move_base.yaml"/>

        <rosparam command="load" file="$(find tiago_hamr_navigation)/config/common/global_costmap.yaml"/>
        <rosparam command="load" file="$(find tiago_hamr_navigation)/config/common/local_costmap.yaml"/>
        <rosparam command="load" file="$(find tiago_hamr_navigation)/config/common/global_costmap_plugin.yaml"/>
        <rosparam command="load" file="$(find tiago_hamr_navigation)/config/common/local_costmap_plugin.yaml"/>

        <rosparam command="load" file="$(find tiago_hamr_navigation)/config/global_planner/$(arg global_planner).yaml"/>
        <rosparam command="load" file="$(find tiago_hamr_navigation)/config/local_planner/$(arg local_planner).yaml"/>

        <rosparam command="load" file="$(find tiago_hamr_navigation)/config/common/recovery_behaviors.yaml"/>

    </node>

    <node name="rviz" pkg="rviz" type="rviz" if="$(arg rviz)"
          args="-d $(find tiago_hamr_navigation)/config/rviz/pal.rviz"/>

    <!-- Localization or Mapping state -->
    <node pkg="pal_navigation_sm" type="navigation.sh" name="navigation"
          args="tiago $(arg state) $(arg localization) $(arg mapping) $(arg map) $(arg octomap) $(arg multiple) $(arg tf_prefix)" output="screen"/>

    <!-- pointcloud to laserscan-->
    <include file="$(find tiago_laser_sensors)/launch/rgbd_cloud_laser.launch">
        <arg name="cloud" value="/xtion/depth_registered/points"/>
    </include>

    <!-- Laser filter (empty for public sim) -->
    <node name="laser_filter" pkg="laser_filters" type="scan_to_scan_filter_chain">
        <rosparam file="$(find tiago_laser_sensors)/config/$(arg laser_model)_filter.yaml"
                  command="load"
                  unless="$(eval arg('public_sim') or arg('multiple'))"/>
        <remap from="scan"          to="scan_raw"/>
        <remap from="scan_filtered" to="scan"/>
    </node>

    <!-- Navigation State Machine -->
    <include file="$(find tiago_2dnav)/launch/state_machine.launch">
        <arg name="state" value="$(arg state)"/>
        <arg name="public_sim"  value="$(arg public_sim)"/>
        <arg name="base_frame" value="$(arg base_frame)"/>
        <arg name="map_frame" value="$(arg map_frame)"/>
    </include>

    <!-- Robot Pose Publisher -->
    <include file="$(find robot_pose)/launch/robot_pose.launch">
        <arg name="robot_prefix"      value="$(arg tf_prefix)"/>
    </include>

</launch>